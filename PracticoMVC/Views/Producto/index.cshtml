@model List<PracticoMVC.Models.Producto>



<h2 class="mb-4">Lista de Productos</h2>
<table class="table table-bordered table-hover bg-white shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>Nombre</th>
            <th>Precio</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Nombre</td>
                <td>$@p.Precio</td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-success" href="/Producto/Crear">Agregar Producto</a>