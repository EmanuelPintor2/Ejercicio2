@model PracticoMVC.Models.Producto

<h2>Crear Producto</h2>

<form asp-action="Crear" method="post">
    <div>
        <label>Nombre:</label>
        <input asp-for="Nombre" />
        <span asp-validation-for="Nombre" style="color:red"></span>
    </div>

    <div>
        <label>Precio:</label>
        <input asp-for="Precio" type="number" step="0.01" />
        <span asp-validation-for="Precio" style="color:red"></span>
    </div>

    <button type="submit">Guardar</button>
</form>

<a href="@Url.Action("Index", "Producto")">Volver a la lista</a>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
